    <style name="TransparentProgressDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="MyProfileEditTextSpinnerStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_marginTop">@dimen/my_profile_fields_margin_top</item>
        <item name="android:background">@drawable/border_textview</item>
        <item name="android:padding">2dp</item>
    </style>
    <!-- Edit Text Style -->
    <style name="LoginEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:background">@drawable/text_field</item>
        <item name="android:ems">10</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">7dp</item>
    </style>
    <style name="view_20">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ten</item>
    </style>
    <style name="view_10">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/five</item>
    </style>

    <style name="padding_left_right_small">
        <item name="android:paddingRight">@dimen/four</item>
        <item name="android:paddingLeft">@dimen/four</item>
    </style>

</resources>
